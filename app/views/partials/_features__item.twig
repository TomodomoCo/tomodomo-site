<div class="row u-mt--s3x u-mb--s3x">
	<div class="col col--one-third">
		{% include 'partials/_image.twig' with {
			type: logo.type|default('png'),
			file: logo.file,
			fill: '#555',
			bri: 0,
			width: logo.width,
			path: ( ( logo.type == 'svg' ) ? 'partials/svgs/' : 'assets/img/' ) ~ 'client-logos/',
			classes: [ 'u-mb--s' ],
		} %}

		{% markdown %}{{content}}{% endmarkdown %}
	</div>
	<div class="col col--two-thirds">
		<img src="https://tomodomo.imgix.net/assets/img/portfolio/{{image}}?format=auto&crop=top,left&fit=crop&w=1200&h=550" class="img img--standout">
	</div>
</div>
